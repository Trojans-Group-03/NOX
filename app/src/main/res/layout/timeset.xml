<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:backgroundTint="@color/dark">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="358dp"
        android:layout_height="109dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="646dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/fing_your_show1"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#12131F"
        android:contentDescription="timebackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/backgroung" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="408dp"
        android:layout_height="223dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="465dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/background_2" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/todo8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/arrow"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_marginStart="304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toEndOf="@+id/imageView25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/howmanytickets"
        android:layout_width="272dp"
        android:layout_height="44dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="196dp"
        android:fontFamily="sans-serif-black"
        android:text="How Many Tickets?"
        android:textColor="#FFF9C4"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/imageView24"
        app:layout_constraintTop_toTopOf="@+id/imageView24" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white2"
        android:ems="10"
        android:foregroundTint="@color/white2"
        android:hint="No. of Full Tickets"
        android:inputType="number"
        android:textColorHint="@color/white2"
        android:textColorLink="@color/white2"
        app:layout_constraintEnd_toEndOf="@+id/howmanytickets"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/howmanytickets"
        app:layout_constraintTop_toBottomOf="@+id/howmanytickets" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="276dp"
        android:layout_height="51dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/white2"
        android:ems="10"
        android:foregroundTint="@color/white2"
        android:hint="No. of Kids Tickets"
        android:inputType="number"
        android:textColorHint="@color/white2"
        android:textColorLink="@color/white2"
        app:layout_constraintEnd_toEndOf="@+id/howmanytickets"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/howmanytickets"
        app:layout_constraintTop_toBottomOf="@+id/howmanytickets" />

    <EditText
        android:id="@+id/editTextTime2"
        android:layout_width="278dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/white2"
        android:ems="10"
        android:hint="Time"
        android:inputType="time"
        android:textColorHint="@color/white2"
        android:textColorLink="@color/white2"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumber2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber2"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="278dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/white2"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        android:textColorHint="@color/white2"
        app:layout_constraintEnd_toEndOf="@+id/editTextTime2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTime2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTime2" />

    <Button
        android:id="@+id/Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F05152"
        android:text="Confirm"
        android:textColor="#EFE1C6"
        app:layout_constraintEnd_toEndOf="@+id/editTextDate2"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="@+id/editTextDate2"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate2" />

</androidx.constraintlayout.widget.ConstraintLayout>