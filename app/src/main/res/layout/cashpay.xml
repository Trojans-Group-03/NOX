<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:backgroundTint="@color/dark">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/background_234" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/todo8"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:srcCompat="@drawable/arrow"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:srcCompat="@drawable/menu"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F05152"
        android:text="Finish"
        android:textColor="#EFE1C6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />

    <TextView
        android:id="@+id/successful"
        android:layout_width="204dp"
        android:layout_height="48dp"
        android:layout_marginBottom="412dp"
        android:fontFamily="sans-serif-black"
        android:text="Cash Payment"
        android:textColor="#FFF9C4"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="149dp"
        android:layout_height="161dp"
        app:layout_constraintBottom_toTopOf="@+id/Next"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/successful"
        app:layout_constraintVertical_bias="0.885"
        app:srcCompat="@drawable/websiteqrcode_noframe" />

    <TextView
        android:id="@+id/note"
        android:layout_width="306dp"
        android:layout_height="43dp"
        android:layout_marginBottom="24dp"
        android:text="Note: Please save this barcode and use this when entering the hall"
        android:textColor="@color/purple2"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="232dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Payment Amount: 3000 LKR"
        android:textColor="@color/white2"
        android:textColorHint="@color/white2"
        app:layout_constraintBottom_toTopOf="@+id/note"
        app:layout_constraintEnd_toEndOf="@+id/successful"
        app:layout_constraintStart_toStartOf="@+id/successful" />

</androidx.constraintlayout.widget.ConstraintLayout>