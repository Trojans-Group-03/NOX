<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardpay">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background_234" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:srcCompat="@drawable/menu"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/todo8"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:srcCompat="@drawable/arrow"
            tools:ignore="ImageContrastCheck"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#F05152"
            android:text="Next"
            android:textColor="#EFE1C6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.789"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/save_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#F05152"
            android:text="save card"
            android:textColor="#EFE1C6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.228"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/successful"
            android:layout_width="197dp"
            android:layout_height="39dp"
            android:layout_marginBottom="324dp"
            android:fontFamily="sans-serif-black"
            android:text="Card Payment"
            android:textColor="#FFF9C4"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/Next"
            app:layout_constraintEnd_toStartOf="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView12" />

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="276dp"
            android:layout_height="51dp"
            android:layout_marginBottom="204dp"
            android:backgroundTint="@color/white2"
            android:ems="10"
            android:foregroundTint="@color/white2"
            android:hint="Card No."
            android:inputType="number"
            android:textColorHint="@color/white2"
            android:textColorLink="@color/white2"
            app:layout_constraintBottom_toTopOf="@+id/Next"
            app:layout_constraintEnd_toEndOf="@+id/successful"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/successful" />

        <EditText
            android:id="@+id/Exdate_text"
            android:layout_width="276dp"
            android:layout_height="51dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@color/white2"
            android:ems="10"
            android:foregroundTint="@color/white2"
            android:hint="Expire Date"
            android:inputType="number"
            android:textColorHint="@color/white2"
            android:textColorLink="@color/white2"
            app:layout_constraintBottom_toTopOf="@+id/Next"
            app:layout_constraintEnd_toEndOf="@+id/successful"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/successful" />

        <EditText
            android:id="@+id/CVV"
            android:layout_width="276dp"
            android:layout_height="51dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white2"
            android:ems="10"
            android:foregroundTint="@color/white2"
            android:hint="CVV"
            android:inputType="number"
            android:textColorHint="@color/white2"
            android:textColorLink="@color/white2"
            app:layout_constraintBottom_toTopOf="@+id/Next"
            app:layout_constraintEnd_toEndOf="@+id/successful"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/successful" />

        <EditText
            android:id="@+id/NameonCard"
            android:layout_width="276dp"
            android:layout_height="51dp"
            android:layout_marginBottom="140dp"
            android:backgroundTint="@color/white2"
            android:ems="10"
            android:foregroundTint="@color/white2"
            android:hint="Name on Card"
            android:inputType="text"
            android:textColorHint="@color/white2"
            android:textColorLink="@color/white2"
            app:layout_constraintBottom_toTopOf="@+id/Next"
            app:layout_constraintEnd_toEndOf="@+id/successful"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/successful" />

        <RadioButton
            android:id="@+id/visa"
            android:layout_width="66dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/white2"
            android:buttonTint="@color/white2"
            android:text="Visa"
            android:textColor="@color/white2"
            android:textColorHint="@color/white2"
            android:textColorLink="@color/white2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/master"
            app:layout_constraintTop_toBottomOf="@+id/successful" />

        <RadioButton
            android:id="@+id/master2"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/white2"
            android:buttonTint="@color/white2"
            android:text="Master"
            android:textColor="@color/white2"
            android:textColorHint="@color/white2"
            android:textColorLink="@color/white2"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/master"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/successful" />

        <RadioButton
            android:id="@+id/master"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/white2"
            android:buttonTint="@color/white2"
            android:text="eZCash"
            android:textColor="@color/white2"
            android:textColorHint="@color/white2"
            android:textColorLink="@color/white2"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumber3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/successful"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>