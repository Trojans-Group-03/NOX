<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_234" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginBottom="240dp"
        android:backgroundTint="@color/white2"
        android:buttonTint="@color/white2"
        android:text="Cash"
        android:textColor="@color/white2"
        android:textColorHint="@color/white2"
        android:textColorLink="@color/white2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radioButton2"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="@+id/successful" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="236dp"
        android:backgroundTint="@color/white2"
        android:buttonTint="@color/white2"
        android:text="Card"
        android:textColor="@color/white2"
        android:textColorHint="@color/white2"
        android:textColorLink="@color/white2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/successful" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:srcCompat="@drawable/menu"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/todo8"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:srcCompat="@drawable/arrow"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/Next"
        android:layout_width="95dp"
        android:layout_height="47dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#F05152"
        android:text="Pay"
        android:textColor="#EFE1C6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2" />

    <Button
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:backgroundTint="#F05152"
        android:text="Cansel"
        android:textColor="#EFE1C6"
        app:layout_constraintEnd_toStartOf="@+id/Next"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/successful"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

    <TextView
        android:id="@+id/successful"
        android:layout_width="266dp"
        android:layout_height="39dp"
        android:layout_marginBottom="412dp"
        android:fontFamily="sans-serif-black"
        android:text="Payment Methods"
        android:textColor="#FFF9C4"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toEndOf="@+id/imageView12" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="232dp"
        android:layout_height="43dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/white2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Payment Amount: 3000 LKR"
        android:textColor="@color/white2"
        android:textColorHint="@color/white2"
        app:layout_constraintEnd_toEndOf="@+id/radioButton2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/radioButton"
        app:layout_constraintTop_toBottomOf="@+id/successful" />

</androidx.constraintlayout.widget.ConstraintLayout>